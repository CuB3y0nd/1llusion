(defwidget cal []
  (box :class "cal-box"
       :orientation "v"
       :space-evenly false
    (calendar :class "cal"
              :day {formattime(EWW_TIME, "%d")}
              :month {formattime(EWW_TIME, "%m")}
              :year {formattime(EWW_TIME, "%Y")}
  ))
)

;; Windows ;;
(defwindow date
  :geometry (geometry :x "40%"
                      :y "8%"
                      :anchor "center top")
  :wm-ignore true
(cal))
