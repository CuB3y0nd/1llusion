#!/usr/bin/env bash
#  ██╗  ██╗██╗██████╗ ███████╗    ██████╗  █████╗ ██████╗
#  ██║  ██║██║██╔══██╗██╔════╝    ██╔══██╗██╔══██╗██╔══██╗
#  ███████║██║██║  ██║█████╗      ██████╔╝███████║██████╔╝
#  ██╔══██║██║██║  ██║██╔══╝      ██╔══██╗██╔══██║██╔══██╗
#  ██║  ██║██║██████╔╝███████╗    ██████╔╝██║  ██║██║  ██║
#  ╚═╝  ╚═╝╚═╝╚═════╝ ╚══════╝    ╚═════╝ ╚═╝  ╚═╝╚═╝  ╚═╝

conf_file="$HOME/.config/bspwm/rices/$RICETHEME/Theme.sh"
T_Padding=$(grep "bspc config top_padding" "$conf_file" | awk '{print $NF}')
B_Padding=$(grep "bspc config bottom_padding" "$conf_file" | awk '{print $NF}')
L_Padding=$(grep "bspc config left_padding" "$conf_file" | awk '{print $NF}')
R_Padding=$(grep "bspc config right_padding" "$conf_file" | awk '{print $NF}')

hide() {
	(polybar-msg cmd hide)
	(bspc config top_padding 2)
	(bspc config bottom_padding 2)

	if pgrep -f 'eww.*bar'; then
		if [ "$RICETHEME" = "z0mbi3" ]; then
			if eww -c "$HOME"/.config/bspwm/rices/z0mbi3/bar active-windows | grep -q "bar: bar"; then
				(eww -c "$HOME"/.config/bspwm/rices/z0mbi3/bar close bar)
				(bspc config left_padding 2)
				(bspc config right_padding 2)
			fi
		elif [ "$RICETHEME" = "andrea" ]; then
			if eww -c "$HOME"/.config/bspwm/rices/andrea/andy active-windows | grep -q "bar: bar"; then
				(eww -c "$HOME"/.config/bspwm/rices/andrea/andy/ close bar)
				(bspc config top_padding 2)
				(bspc config bottom_padding 2)
			fi
		fi
	fi
}

unhide() {
	(polybar-msg cmd show)
	(bspc config top_padding "$T_Padding")
	(bspc config bottom_padding "$B_Padding")

	if pgrep -f 'eww.*bar'; then
		if [ "$RICETHEME" = "z0mbi3" ]; then
			if ! eww -c "$HOME"/.config/bspwm/rices/z0mbi3/bar active-windows | grep -q "bar: bar"; then
				(eww -c "$HOME"/.config/bspwm/rices/z0mbi3/bar open bar)
				(bspc config left_padding "$L_Padding")
				(bspc config right_padding "$R_Padding")
			fi
		elif [ "$RICETHEME" = "andrea" ]; then
			if ! eww -c "$HOME"/.config/bspwm/rices/andrea/andy active-windows | grep -q "bar: bar"; then
				(eww -c "$HOME"/.config/bspwm/rices/andrea/andy open bar)
				(bspc config top_padding "$T_Padding")
				(bspc config bottom_padding "$B_Padding")
			fi
		fi
	fi
}

case $1 in
-h)
	hide
	;;
-u)
	unhide
	;;
esac
